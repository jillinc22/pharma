                    <th>Form</th>
                    <th>Expiry</th>
                    <th>Price Per Item</th>
                    <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                each item in tbl_itemStock
                    <tr>
                    <td>
                        value=item.int_itemStockID
                    </td>
                    <td>
                        value=item.varchar_medCode
                    </td>
                    <td>
                        value=item.varchar_itemName
                    </td>
                    <td>
                        value=item.varchar_medGenName
                    </td>
                    <td>
                        value=item.varchar_itemDescription
                    </td>
                    <td>
                        value=item.varchar_medForm
                    </td>
                    <td>
                        value=item.date_medicineExpiry
                    </td>
                    <td>    
                        value=item.decimal_itemPrice + ".00"
                    </td>
                    <td>
                        a(href=`/admin/colleges/${item.int_itemStockID}/edit` id="updatemed"): span.fa.fa-edit Edit
                    </td>
                    </tr>
                </tbody>
                </table>
