extends ../../home/views/navbar.pug

block content
    <div class="content-wrapper">
        <div class="container-fluid">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
            <i class="fa fa-list-ul"></i> List of Petitions
            </div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                        <th>Petition ID</th>
                        <th>Subject Code</th>
                        <th>Subject Name</th>
                        <th>Time</th>
                        <th>Days</th>
                        <th>Members</th>
                        <th>Created by</th>
                        <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        <th>Petition ID</th>
                        <th>Subject Code</th>
                        <th>Subject Name</th>
                        <th>Time</th>
                        <th>Days</th>
                        <th>Members</th>
                        <th>Created by</th>
                        <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    each petit in tbl_petition
                        <tr>
                        <td>
                            value=petit.int_petitID
                        </td>
                        <td>
                            value=petit.char_subjCode
                        </td>
                        <td>
                            value=petit.varchar_courseName
                        </td>
                        <td>
                            value=petit.varchar_petitTime
                        </td>
                        <td>
                            value=petit.varchar_petitDays
                        </td>
                        <td>
                            value=petit.int_petitMemb
                        </td>
                        <td>
                            value=petit.varchar_userEmailAdd
                        </td>
                        <td>
                            //- input(type="hidden" name="userid" value=`${user.varchar_collegeName}`)
                            a(href=`/office/petitions/${petit.int_petitID}/approved`): span.fa.fa-thumbs-up Approve
                            <hr>
                            a(href=`/office/petitions/${petit.int_petitID}/rejected`): span.fa.fa-thumbs-down Reject
                        </td>
                        
                        </tr>

                </tbody>
                </table>
            </div>
            </div>
        </div>

