extends ../../home/views/navbar.pug

block content

    <div class="content-wrapper">
        <div class="container-fluid">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
            <i class="fa fa-list-ul"></i> List of Diagnostics</div>
            <button type="button" class="btn btn-secondary btn-lg btn-block" href="#portfolio" data-toggle="modal" data-target="#addDiagnostic">Add Diagnostic</button>
            
            <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Generic Name</th>
                    <th>Description</th>
                    <th>Packing(Form)</th>
                    <th>Expiry</th>
                    <th>Price</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Generic Name</th>
                    <th>Description</th>
                    <th>Packing(Form)</th>
                    <th>Expiry</th>
                    <th>Price</th>
                    <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                each item in tbl_itemStock
                    <tr>
                    <td>
                        value=item.int_itemStockID
                    </td>
                    <td>
                        value=item.varchar_itemName
                    </td>
                    <td>
                        value=item.varchar_diagnosticGenName
                    </td>
                    <td>
                        value=item.varchar_itemDescription
                    </td>
                    <td>
                        value=item.varchar_diagnosticPacking
                    </td>
                    <td>
                        value=item.date_diagnosticExpiry
                    </td>
                    <td>    
                        value=item.decimal_itemPrice + ".00"
                    </td>
                    <td>
                        a(href=`/admin/petition/${item.int_itemStockID}/edit` id="editpetit"): span.fa.fa-edit Edit
                    </td>
                    </tr>
                </tbody>
                </table>
            </div>
            </div>
        </div>
        </div>
        <!-- /.container-fluid-->
        <!-- /.content-wrapper-->
