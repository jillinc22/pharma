extends ../../home/views/index.pug

block content
   
    <div class="content-wrapper">
        <div class="container-fluid">
            each result in result_petit
                h4 Update:
                    value=" "+result.char_subjCode

                <form method="POST" action="editpetit">
                    <hr>
                    <div class = "row">
                    <div class="form-group col-6">
                            <label for="editsubjcode">Subject Code</label>
                            input(type="text" class="form-control" id="editsubjcode" placeholder="(ex. COMP4083)" value=`${result.char_subjCode}` name="petit_subjcode" required)
                    </div>
                    </div>
                    <div class="row">
                    <div class="form-group col-6">
                        <label for="editstatus">Status</label>
                        input(type="text" class="form-control" id="editstatus" placeholder="(ex. Approved or Not Approved)" value=`${result.varchar_petitStatus}` name="petit_status" required)
                    </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="edittime">Time</label>
                            input(type="text" class="form-control" id="edittime" placeholder="(ex. 1:30PM-3:30PM)" value=`${result.varchar_petitTime}` name="petit_time" required)
                        </div>
                        <div class="form-group col-6">
                            <label for="editday">Days</label>
                            input(type="text" class="form-control" id="editday" placeholder="(ex. T,F,SAT)" name="petit_days" value=`${result.varchar_petitDays}` required)
                        </div>
                    </div>
                    </div>
                    <button type="submit" class="btn btn-default float-right" id="buttoneditprofile">Submit</button>
                </div>
        </div>
        </div>
