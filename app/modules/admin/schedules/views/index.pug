block content
   
    <div class="content-wrapper">
        <div class="container-fluid">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
            <i class="fa fa-list-ul"></i> List of Machines</div>
            <button type="button" class="btn btn-secondary btn-lg btn-block" href="#portfolio" data-toggle="modal" data-target="#addMachine">Add Machine</button>
            
            <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>Serial Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price Per Item</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                    <th>ID</th>
                    <th>Serial Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price Per Item</th>
                    <th>Actions</th>
                    </tr>
                </tfoot>
                each item in tbl_itemStock
                    <tr>
                    <td>
                        value=item.int_itemStockID
                    </td>
                    <td>
                        value=item.varchar_serialCode
                    </td>
                    <td>
                        value=item.varchar_itemName
                    </td>
                    <td>
                        value=item.varchar_itemDescription
                    </td>
                    <td>    
                        value=item.decimal_itemPrice + ".00"
                    </td>
                    <td>
                        a(href=`/admin/schedules/${item.int_itemStockID}/edit` id="editsched"): span.fa.fa-edit Edit
                    </td>
                    </tr>
                </tbody>
                </table>
            </div>
            </div>
        </div>
        </div>
        <!-- /.container-fluid-->
        <!-- /.content-wrapper-->
